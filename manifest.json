{ 
	"manifest_version": 2, 
	"name": "NoAff", 
	"version": "0.0.3", 
	"description": "自动拦截隐藏AFF-星河vps资讯-xhvps.info", 
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"browser_action": {
		"default_icon": "img/icon.png", 
		"default_title": "自动拦截隐藏AFF V0.0.3版本",      
		"default_popup": "popup.html"       
	},
    "permissions":
    [ 
		"notifications",
        "webRequest",
        "webRequestBlocking", 
        "storage", 
        "http://*/*", 
        "https://*/*" 
    ],
	"background":
	{
		"scripts": ["js/background.js"]
	},
	"content_scripts": [
		{
		  "matches": ["*://*/*"],
		  "js": ["js/myscript.js"]
		}
	 ]
}